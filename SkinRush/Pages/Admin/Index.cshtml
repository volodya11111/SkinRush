@page
@model SkinRush.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Админка";
    Layout = "_Layout";
}

<style>
    .admin-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 30px;
        background: #1e1e1e;
        border-radius: 16px;
        box-shadow: 0 0 20px rgba(0,172,238,0.2);
        color: #eee;
        font-family: 'Montserrat', sans-serif;
    }

    h2 {
        margin-top: 40px;
        margin-bottom: 20px;
        color: #00acee;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 40px;
    }

    th, td {
        padding: 12px;
        border-bottom: 1px solid #444;
        text-align: left;
        vertical-align: middle;
    }

    th {
        background-color: #2c2c2c;
        color: #00acee;
    }

    form {
        display: inline;
    }

    .delete-btn {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 6px;
        cursor: pointer;
    }

        .delete-btn:hover {
            background-color: #c82333;
        }

    .logout-link {
        color: #00acee;
        font-weight: 700;
        float: right;
        margin-bottom: 20px;
        cursor: pointer;
        text-decoration: underline;
    }

    img.skin-image {
        max-width: 80px;
        max-height: 80px;
        border-radius: 8px;
        object-fit: cover;
    }
</style>

<div class="admin-container">
    <h1>
        Панель администратора
        <a class="logout-link" asp-page="/Admin/Logout">Выйти</a>
        <a class="btn btn-outline-warning mt-3" asp-page="/Admin/Add">
            ➕ Добавить скин вручную
        </a>
    </h1>

    <h2>CS:GO Скины</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Изображение</th>
                <th>Название</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var skin in Model.CSGOSkins)
            {
                <tr>
                    <td>@skin.Id</td>
                    <td><img class="skin-image" src="@skin.ImageUrl" alt="@skin.Name" /></td>
                    <td>@skin.Name</td>
                    <td>$@skin.Price</td>
                    <td>
                        <form method="post" asp-page-handler="DeleteCsgo" onsubmit="return confirm('Удалить скин?');">
                            <input type="hidden" name="id" value="@skin.Id" />
                            <button type="submit" class="delete-btn">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Dota 2 Скины</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Изображение</th>
                <th>Название</th>
                <th>Герой</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var skin in Model.DotaSkins)
            {
                <tr>
                    <td>@skin.Id</td>
                    <td><img class="skin-image" src="@skin.ImageUrl" alt="@skin.Name" /></td>
                    <td>@skin.Name</td>
                    <td>@skin.Hero</td>
                    <td>$@skin.Price</td>
                    <td>
                        <form method="post" asp-page-handler="DeleteDota" onsubmit="return confirm('Удалить скин?');">
                            <input type="hidden" name="id" value="@skin.Id" />
                            <button type="submit" class="delete-btn">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
