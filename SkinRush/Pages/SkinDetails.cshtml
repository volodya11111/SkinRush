@page "{id:int}"
@model SkinRush.Pages.SkinDetailsModel
@{
    ViewData["Title"] = "Информация о скине";
    Layout = "_Layout";
}

<style>
    .skin-details-container {
        max-width: 900px;
        margin: 40px auto;
        display: flex;
        gap: 50px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #121212;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 0 20px rgba(0,0,0,0.8);
        color: #e0e0e0;
    }

    .image-wrapper {
        flex: 0 0 400px; /* фиксированная ширина и высота */
        height: 400px;
        border: 4px solid #00acee;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,172,238,0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #222;
    }

        .image-wrapper img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain; /* чтобы сохранить пропорции и вписаться в квадрат */
            border-radius: 16px;
        }

    .info {
        flex: 1.3;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .info h1 {
            font-size: 3rem;
            font-weight: 900;
            margin-bottom: 25px;
            color: #00acee;
            text-shadow: 0 0 10px #00acee;
        }

        .info p {
            font-size: 1.3rem;
            font-weight: 700;
            margin: 12px 0;
            line-height: 1.5;
        }

        .info strong {
            color: #00acee;
        }

    hr {
        margin: 35px 0;
        border-color: #333;
    }

    .telegram-contact {
        margin-top: 20px;
        font-weight: 700;
        font-size: 1.2rem;
        color: #aaa;
    }
</style>

<div class="skin-details-container">
    <div class="image-wrapper">
        <img src="@(Url.Content(Model.CSGOSkin?.ImageUrl ?? Model.DotaSkin?.ImageUrl))" alt="Skin Image" />
    </div>

    <div class="info">
        <h1>@(Model.CSGOSkin?.Name ?? Model.DotaSkin?.Name)</h1>

        <p><strong>Цена:</strong> $@(Model.CSGOSkin?.Price ?? Model.DotaSkin?.Price)</p>

        @if (Model.CSGOSkin != null)
        {
            <p><strong>Тип:</strong> @Model.CSGOSkin.Type</p>
            <p><strong>Износ:</strong> @Model.CSGOSkin.Exterior</p>
        }
        else if (Model.DotaSkin != null)
        {
            <p><strong>Герой:</strong> @Model.DotaSkin.Hero</p>
            <p><strong>Тип:</strong> @Model.DotaSkin.Type</p>
        }

        <hr />

        <p class="telegram-contact">Связаться со мной в Telegram:</p>
        <a href="https://t.me/agiqxc" target="_blank" rel="noopener noreferrer">
            <img src="~/images/tguz.png" alt="Telegram" width="420"/>
        </a>
    </div>
</div>
